{
  "name": "Wallify",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Another brick in the wall.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "background",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "wallify"
  },
  "chrome_url_overrides" : {
    "newtab": "app.html"
  }
}
